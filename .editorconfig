# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,coffee,html,less,css,json,py,yml}]
indent_style = space
indent_size = 2

[*.html]
indent_size = 2

[*.py]
indent_size = 4

[*.i18n.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
