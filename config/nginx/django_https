server {
    listen 443 ssl;
    ssl on;
    ssl_certificate /etc/ssl/fullchain.pem;
    ssl_certificate_key /etc/ssl/privkey.pem;
    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;

    server_name devinit.org www.devinit.org data.devinit.org;

    client_max_body_size 10M;

    if ($host ~* data.devinit.org) {
        return 301 https://devinit.org/data/;
    }

   location / {
        proxy_read_timeout 600;
        proxy_buffering off;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://web:8090/;
    }

    error_page 404 /404-static.html;
    location  /404-static.html {
        root /usr/share/nginx/html/DIwebsite-redesign/di_website/templates;
        internal;
    }

    error_page 500 /500-static.html;
    location  /500-static.html {
        root /usr/share/nginx/html/DIwebsite-redesign/di_website/templates;
        internal;
    }

   location /assets/ {
        expires 168h;
        autoindex on;
        root /;
    }

    location /media/ {
        expires 168h;
        autoindex on;
        root /;
    }

    location /wp-content/ {
        expires 168h;
        autoindex on;
        root /;
    }

    location /data/spotlights-on-kenya-and-uganda/spotlight-uganda {
        proxy_pass http://spotlights/spotlight/spotlight-uganda;
    }

    location /data/spotlights-on-kenya-and-uganda/spotlight-uganda/compare {
        proxy_pass http://spotlights/spotlight/spotlight-uganda/compare;
    }

    location /data/spotlights-on-kenya-and-uganda/spotlight-kenya {
        proxy_pass http://spotlights/spotlight/spotlight-kenya;
    }

    location /data/spotlights-on-kenya-and-uganda/spotlight-kenya/compare {
        proxy_pass http://spotlights/spotlight/spotlight-kenya/compare;
    }

    location /_next {
        proxy_pass http://spotlights;
    }

    location /static {
        proxy_pass http://spotlights;
    }
}
